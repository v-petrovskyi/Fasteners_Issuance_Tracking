<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>

<!--        <import type="com.v_petr.qrandbarcodescanner.utils.Converter"/>-->
        <variable
            name="materialIssueRecord"
            type="com.v_petr.qrandbarcodescanner.data.model.MaterialIssueRecord" />
    </data>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context=".ScannerFragment">


            <EditText
                android:id="@+id/editTextQty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:ems="8"

                android:hint="@string/quantity"
                android:inputType="number"
                android:minHeight="48dp"
                app:layout_constraintEnd_toStartOf="@+id/buttonPlus"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/buttonMinus"
                app:layout_constraintTop_toBottomOf="@+id/textViewMaterialCode" />

            <Button
                android:id="@+id/buttonPlus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+"
                app:layout_constraintBottom_toBottomOf="@+id/editTextQty"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/editTextQty"
                app:layout_constraintTop_toTopOf="@+id/editTextQty" />

            <Button
                android:id="@+id/buttonMinus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                app:layout_constraintBottom_toBottomOf="@+id/editTextQty"
                app:layout_constraintEnd_toStartOf="@+id/editTextQty"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/editTextQty" />

            <TextView
                android:id="@+id/textViewPartBarcode"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:text="@string/part_barcode"
                android:textAlignment="center"
                android:textSize="20sp"
                app:layout_constraintEnd_toStartOf="@+id/guideline"
                app:layout_constraintHorizontal_bias="0.375"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/editTextPartBarcode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/number"
                android:inputType="text"
                android:minHeight="48dp"

                app:layout_constraintBottom_toBottomOf="@+id/textViewPartBarcode"
                app:layout_constraintEnd_toStartOf="@id/buttonScanPart"
                app:layout_constraintStart_toStartOf="@+id/guideline"
                app:layout_constraintTop_toTopOf="@+id/textViewPartBarcode" />


            <ImageButton
                android:id="@+id/buttonScanPart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_document_scanner_24"
                android:minHeight="48dp"
                app:layout_constraintBottom_toBottomOf="@+id/editTextPartBarcode"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/editTextPartBarcode"
                app:layout_constraintTop_toTopOf="@+id/editTextPartBarcode"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/textViewMaterialCode"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="@string/material_code"
                android:textAlignment="center"
                android:textSize="20sp"
                app:layout_constraintEnd_toStartOf="@+id/guideline"
                app:layout_constraintHorizontal_bias="0.375"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewPartBarcode" />

            <EditText
                android:id="@+id/editTextMaterialCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"

                android:hint="@string/number"
                android:inputType="text"
                android:minHeight="48dp"
                app:layout_constraintBottom_toBottomOf="@+id/textViewMaterialCode"
                app:layout_constraintEnd_toStartOf="@id/buttonScanMaterial"
                app:layout_constraintStart_toStartOf="@+id/guideline"
                app:layout_constraintTop_toTopOf="@+id/textViewMaterialCode" />

            <ImageButton
                android:id="@+id/buttonScanMaterial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_qr_code_scanner_24"
                android:minHeight="48dp"
                app:layout_constraintBottom_toBottomOf="@+id/editTextMaterialCode"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/editTextMaterialCode"
                app:layout_constraintTop_toTopOf="@+id/editTextMaterialCode"
                app:layout_constraintVertical_bias="0.0" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_end="306dp" />

            <Button
                android:id="@+id/buttonSave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:text="@string/save"
                app:layout_constraintEnd_toStartOf="@+id/buttonSaveAndClear"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editTextQty" />

            <Button
                android:id="@+id/buttonSaveAndClear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/save_and_clear"
                app:layout_constraintBottom_toBottomOf="@+id/buttonSave"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/buttonSave"
                app:layout_constraintTop_toTopOf="@+id/buttonSave"
                app:layout_constraintVertical_bias="0.0" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>
</layout>
